<H1>Actualizar Usuario</H1>
<br><br>
<form action="/users/<%= users.id %>/put?_method=put" method="post" enctype="multipart/form-data">
    
    <div>
        <label for="imagen">Imagen: </label>
        <input type="file" name="imagen" id="imagen" value="<%= users.imagen %>"><br><br>
    </div>

    <div>
        <label for="nombre">Nombre:  </label>
        <input type="text" name="nombre" id="nombre" value="<%= users.nombre %>" > <br><br>
    </div>

    <div>
        <label for="apellido">Apellido:  </label>
        <input type="text" name="apellido" id="apellido" value="<%= users.apellido %>" > <br><br>
    </div>

    <div>
        <label for="email">Email:  </label>
        <input type="text" name="email" id="email" value="<%= users.email %>" > <br><br>
    </div>
    
    <div>
        <label for="usuariotipo">Categoria:  </label>
        <input type="text" name="usuariotipo" id="usuariotipo" <%= users.usuariotipo %> > <br><br>
    </div>
    
    <div>
        <input type="submit" value="Guardar cambios">
    </div>
</form>
