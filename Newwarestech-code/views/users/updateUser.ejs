<link rel="stylesheet" href="/css/product/style-carrito.css">

<H1>Actualizar Usuario</H1>
<br><br>
<form action="/users/<%= users.id %>/put?_method=put" method="post" enctype="multipart/form-data">
    
    <div>
        <label for="imagen">Imagen: </label>
        <input type="file" name="imagen" id="imagen" value="<%= users.imagen %>"><br><br>
    </div>

    <div>
        <label for="nombre">Nombre:  </label>
        <input type="text" name="nombre" id="nombre" value="<%= users.nombre %>" > <br><br>
    </div>

    <div>
        <label for="apellido">Apellido:  </label>
        <input type="text" name="apellido" id="apellido" value="<%= users.apellido %>" > <br><br>
    </div>
    <div>
        <label for="telefono">Telefono:  </label>
        <input type="text" name="telefono" id="telefono" value="<%= users.telefono %>" > <br><br>
    </div>
    <div>
        <label for="direccion">Direccion:  </label>
        <input type="text" name="direccion" id="direccion" value="<%= users.direccion %>" > <br><br>
    </div>


    <div>
        <p>Emai:<%= users.email %></p>
    </div>
    <br>
    
    <div>
        <input type="submit" value="Guardar cambios">
    </div>
</form>
